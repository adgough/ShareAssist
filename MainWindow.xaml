                            Volume="0.125" LoadedBehavior="Play" Source="" Visibility="Collapsed" MediaEnded="PlayNextBG">
                    </MediaElement>

                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <Image Source="/Icons/image-size-select-large.png" Width="20" Height="20" Margin="0,0,5,0" />
                        <TextBox ToolTip="Set viewer window height in pixels." VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Text = "{Binding ViewerHeight, Mode = TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="40" Height="24"></TextBox>
                        <Label VerticalContentAlignment="Center" Content="px"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button Style="{StaticResource ButtonStyle}"
                        Click="StopButton" Background="LightCoral"
                        ToolTip="Stop video." Width="32" Height="32" Margin="0,0,5,0">
                            <Image Source="/Icons/stop-circle.png" />
                        </Button>
                        <Button Style="{StaticResource ButtonStyle}"
                        Click="PauseButton" Background="PaleGoldenrod"
                        ToolTip="Pause/Play video." Width="32" Height="32" Margin="0,0,5,0">
                            <Image Source="/Icons/play-pause.png" />
                        </Button>
                        <Button Style="{StaticResource ButtonStyle}"
                        Click="PlayButtonClick" Background="LightGreen"
                        ToolTip="Play target item from start." Width="32" Height="32" Padding="3,3,3,3">
                            <Image Source="/Icons/play-circle.png"/>
                        </Button>
                        <Button x:Name="ArmButton"
                            Style="{StaticResource ButtonStyle}"
                            Tag=""
